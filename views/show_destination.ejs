<%- include('./partial/header/header-homepage.ejs') -%>
  <br>
  <br>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-12 col-sm-12">
        <div class="card">
          <div class="card-header">
            <h3>
              <%= name_destination %>
            </h3>
          </div>
          <img src="<%= image %>" class="card-img-top" alt="">
          <div class="card-body">
            <h5>
              Location:
              <%= city %>
            </h5>
            <h5>
              Harga Destinasi:
              <%= convertMoney(harga) %>
            </h5>
            <h5>
              Harga Guide: 
              <%= convertMoney(harga_guide) %>
            </h5>
            <br>
            <form action="/destination/order/<%= id %>" method="POST">
              <div class="form-group">
                <label for="exampleFormControlSelect1">Choose Schedule</label>
                <select class="form-control" id="exampleFormControlSelect1" name="time">
                  <option>09.00 - 12.00</option>
                  <option>12.00 - 15.00</option>
                  <option>15.00 - 18.00</option>
                </select>
                <br>
                <input type="date" name="date" min="2017-01-01" class="form-control">
              </div>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">ORDER</button>
              <!-- modal -->
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Order</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <h3>Destination name: <%= name_destination %></h3>
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">Nama Destinasi</th>
                            <th scope="col">Harga Guide</th>
                            <th scope="col">Harga Destination</th>
                            <th scope="col">Total</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>
                              <input type="text" name="harga" value="<%= name_destination %>" class="form-control">
                            </td>
                            <td><%= convertMoney(harga_guide) %></td>
                            <td><%= convertMoney(harga) %></td>
                            <td><%= convertMoney(total(harga_guide, harga)) %></td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                    <div class="modal-footer">
                      <button class="btn btn-primary" data-dismiss="modal">Cancel</button>
                      <button class="btn btn-primary" type="submit">Checkout</button>
                    </div>
                  </div>
                </div>
              </div>
            </form>

          </div>
        </div>
        <br>
        <div class="card">
          <h5 class="card-header">Maps</h5>
          <div class="card-body">
            <div id="map"></div>
            <iframe src="<%= maps %>"
              width="700" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <br>
  <br>
  <br>
  <%- include('./partial/footer/footer.ejs') -%>